{
	"compilerOptions": {
		"jsx": "preserve",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"skipLibCheck": false,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"~": ["."],
			"~/*": ["./*"]
		}
	},
	"include": [".nuxt/nuxt.d.ts", "./**/*"]
}
